{
  "compilerOptions": {
    "rootDir": "./source/",
    "outDir": "./build/",

    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "target": "ESNext",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true
  }
}
